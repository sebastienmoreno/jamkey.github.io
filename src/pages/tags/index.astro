---
import Layout from '~/layouts/PageLayout.astro';
import Headline from '~/components/blog/Headline.astro';

const allPosts = await Astro.glob('~/content/post/*.md');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat().sort())];
const title = "tags";
---

<Layout {title}>
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-8 mx-auto max-w-4xl">
    <Headline
      subtitle="Liste des tags associÃ©s au contenu."
    >
      Tags
    </Headline>
    <section class="flex items-center h-full">
      <div class="tags">
        {tags.map((tag) => (
          <li><a style="text-decoration: underline;" href={`/tag/${tag}`}>{tag}</a></li>
        ))}
      </div>
    </section>
  </section>
</Layout>
